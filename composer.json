{
	"name": "thecodeco/wpmvc",
	"description": "MVC framework for WordPress",
	"license": "ISC",
	"version": "1.0.0-alpha",
	"authors": [
		{
			"name": "Contributors",
			"homepage": "https://github.com/TheCodeCompany/wpmvc/graphs/contributors"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": ">=8.1"
	},
	"autoload": {
		"psr-4": {
			"WPMVC\\": "src/"
		}
	},
	"support": {
		"wiki": "https://github.com/TheCodeCompany/wpmvc/wiki",
		"source": "https://github.com/TheCodeCompany/wpmvc/releases",
		"issues": "https://github.com/TheCodeCompany/wpmvc/issues"
	},
	"keywords": [
		"wordpress",
		"composer",
		"mvc",
		"framework"
	],
	"archive": {
		"exclude": [
			".gitignore"
		]
	},
	"repositories": [
		{
			"name": "thecodeco/coding-standards",
			"type": "git",
			"url": "https://bitbucket.org/thecodeco/coding-standards/"
		}
	],
	"require-dev": {
		"thecodeco/coding-standards": "dev-main",
		"johnpbloch/wordpress": "^6.6"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"johnpbloch/wordpress-core-installer": true
		}
	},
	"scripts": {
		"lint": "composer run phpcs",
		"phpcs": "vendor/bin/phpcs --standard=phpcs.xml .",
		"phpcbf": "vendor/bin/phpcbf --standard=phpcs.xml ."
	}
}