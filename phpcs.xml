<?xml version="1.0"?>
<ruleset name="WPMVC Project Rules">
	<rule ref="TCC"></rule>

	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/wordpress/*</exclude-pattern>

	<!-- Ignore filename standards, we use PSR-4 -->
	<exclude ref="WordPress.Files.FileName"/>

	<config name="minimum_supported_wp_version" value="6.4"/>

</ruleset>
